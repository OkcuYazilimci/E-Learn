@model LearningApp.Models.UserCreateModel;
@{
	ViewData["Title"] = "Create User";
}
<div class="container">
	<h1>Create User</h1>
	<hr />

	<div class="row">
		<div class="col-md-4">
			<form asp-action="Create" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="@Model._IdentityUser.UserName" class="control-label">Username</label>
					<input asp-for="@Model._IdentityUser.UserName" class="form-control" />
					<span asp-validation-for="@Model._IdentityUser.UserName" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="@Model._IdentityUser.Email" class="control-label">Email</label>
					<input asp-for="@Model._IdentityUser.Email" class="form-control" />
					<span asp-validation-for="@Model._IdentityUser.Email" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="@Model._IdentityUser.PasswordHash" class="control-label">Password</label>
					<input type="password" asp-for="@Model._IdentityUser.PasswordHash" class="form-control" />
					<span asp-validation-for="@Model._IdentityUser.PasswordHash" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label name="RoleName" id="RoleName" class="control-label">Role</label>
					<select name="RoleName" id="RoleName" class="form-control">
						@foreach (var item in ViewBag.RoleNames)
						{
							<option value="@item">@item</option>
						}
					</select>
				</div> 
				<!-- Add more fields as needed -->

				<div class="form-group">
					<input type="submit" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	<div>
		<a asp-action="Index">Back to User List</a>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
