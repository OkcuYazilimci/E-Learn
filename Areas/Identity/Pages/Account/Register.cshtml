@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
	Layout = null;
}
<html>
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="~/css/stylelogin.css">
</head>

<body>
	<div class="wrapper">
		<div class="form-wrapper sign-in">
			<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<h2>Create a new account.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating input-group">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
					<label asp-for="Input.Email"></label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating input-group">
					<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
					<label asp-for="Input.Password"></label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-floating input-group">
					<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
					<label asp-for="Input.ConfirmPassword"></label>
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>
			
				<div class="form-group input-group">
					<div class="form-check">
						<input type="radio" asp-for="Input.SelectedRole" value="Instructor" class="form-check-input" />
						<label class="form-check-label" asp-for="Input.IsInstructor"></label>
					</div>
					<div class="form-check input-group">
						<input type="radio" asp-for="Input.SelectedRole" value="Student" class="form-check-input" />
						<label class="form-check-label" asp-for="Input.IsStudent"></label>
					</div>
					<span asp-validation-for="Input.SelectedRole" class="text-danger"></span>
				</div>
				<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
			</form>
		</div>
	</div>
	@section Scripts {

		<partial name="_ValidationScriptsPartial" />
		<script src="~/js/script.js"></script>
	}
</body>
</html>